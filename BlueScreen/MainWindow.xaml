<Window x:Class="BlueScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="ScrollViewContainer">
            
            <WrapPanel x:Name="Wrapper" Width="{Binding ElementName=ScrollViewContainer}"  ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center" Margin="5,5,5,5" VerticalAlignment="Center"></WrapPanel>

            
        </ScrollViewer>
    </Grid>
</Window>
