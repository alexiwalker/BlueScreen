<UserControl x:Class="BlueScreen.UIComponents.SeasonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BlueScreen.UIComponents"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="EpisodesPanel" Height="75" Width="75" Background="Beige" VerticalAlignment="Center" >
        <TextBlock x:Name="SeasonNumber"></TextBlock>
        <Button x:Name="OpenSeason" Width="35" Height="10"></Button>
    </Grid>
</UserControl>
